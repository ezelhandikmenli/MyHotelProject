@model List<HotelProject.WebUI.Models.Role.RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<h1>Rol Atama Sayfası</h1>
<form method="post">
    @for (int i=0; i < Model.Count; i++){
        <div class="form-check">
            <input type ="hidden" asp-for="@Model[i].RoleID" />
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
            <input  asp-for="@Model[i].RoleName" />
            
            <label class="form-check-label" for="@Model[i].RoleName"></label>

        </div>
    }
    <br />
    <button class=" btn btn-success">Kullanıcı İçin Rolleri Güncelle</button>

</form>